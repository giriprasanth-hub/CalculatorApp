<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- Display for showing input and results -->
    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="24dp"
        android:textSize="32sp"
        android:text="0"
        android:background="#000000"
        android:textColor="#FFFFFF"
    />



    <!-- Calculator buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginTop="16dp">

        <!-- Number and operator buttons -->
        <Button android:id="@+id/button7" android:text="7" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button8" android:text="8" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button9" android:text="9" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonDivide" android:text="/" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>

        <Button android:id="@+id/button4" android:text="4" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button5" android:text="5" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button6" android:text="6" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonMultiply" android:text="*" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>

        <Button android:id="@+id/button1" android:text="1" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button2" android:text="2" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/button3" android:text="3" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonSubtract" android:text="-" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>

        <Button android:id="@+id/button0" android:text="0" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonClear" android:text="C" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonEquals" android:text="=" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>
        <Button android:id="@+id/buttonAdd" android:text="+" style="@style/CalculatorButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1"/>

    </GridLayout>

    <TextView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Made by GIRIPRASANTH"
        android:textColor="#666666"
        android:textSize="14sp" />
</LinearLayout>
